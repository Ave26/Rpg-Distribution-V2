generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersAdditionalInfo {
  Dob          String
  Phone_Number Int @map("Phone Number")
  email        String
}

model products {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  barcodeId        String             @unique
  productName      String
  quantity         Int
  sku              String
  palletteLocation String
  dateReceived     String
  expirationDate   String
  poId             String
  image            String
}

model users {
  id              String              @id @default(auto()) @map("_id") @db.ObjectId
  additional_Info UsersAdditionalInfo @map("additional Info")
  password        String              @unique(map: "password_1")
  roles           String              @default("staff")
  username        String              @unique(map: "username_1")
}


